.summary-venue
  ul
    padding 0 1rem

  .calculation__steps
    list-style-type disc

  .must__req
    list-style-type: disc

  figure
    font-family 'Atlas Grotesk Web'
    max-width $column-width
    margin 2rem auto
    margin-top 1rem
    .bar__group
      display flex
      flex-direction column
      margin-bottom 0.25rem
      &:first-of-type
        .bar__bar
          background #98c2ce
      &:last-of-type
        @media (max-width: 400px)
          .bar__label-text
            font-size 11px
            line-height 1
    .right
    .bar__label
      &-text
        margin 0
        font-size 14px
        font-weight bold
        color #111
      .bar__bar
        background-color white
        height 30px
        display flex
        flex-direction row
        align-items: center
        justify-content space-between
        padding 0 0.5rem
        border 3px solid #111
        &-text
          font-size 14px
          margin 0
          color #111
