section.social

	figure
		max-width 40rem
		margin 0 auto
		margin-top 2rem
	.key
		display flex
		justify-content center
		margin-bottom 1rem
		margin-top 1rem
		p
			margin 0
			font-family $sans
			set-type-size(small)
			margin 0 0.25em
			padding 5px 10px
			border 3px solid black
			&.instagram
				background-color $c-instagram
				color black
			&.twitter
				background-color $c-twitter
				color black
			&.facebook
				background-color $c-facebook
				color white
			&.youtube
				background-color $c-youtube
				color black

	circle
		stroke $fg
		stroke-width 2px
	text
		font-family $sans
		font-weight 500
		set-type-size(small)
		text-transform capitalize
		font-size 14px
		&.total
			fill black
	line
		stroke black
		shape-rendering crispEdges
		stroke-opacity .3

	.platform
		&--instagram
			fill $c-instagram
		&--twitter
			fill $c-twitter
		&--facebook
			fill $c-facebook
		&--youtube
			fill $c-youtube

	.g-axis
		.tick:nth-child(2)
			display none
		path
			display none
		text
			set-type-size(xx-small)
			fill black
			font-weight 500
		line
			stroke black
			stroke-dasharray 3px 8px
			stroke-opacity 0.4


	.label
		text-transform uppercase
		set-type-size(xx-small)
		fill black
