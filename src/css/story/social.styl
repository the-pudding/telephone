section.social

	figure
		max-width 40rem
		margin 0 auto
		margin-top 2rem
	.key
		display flex
		justify-content center
		margin-bottom 1rem
		p 
			margin 0
			font-family $sans
			set-type-size(small)
			margin 0 0.25em
			padding 0 0.5em
			&.instagram
				background-color $c-instagram
				color $white
			&.twitter
				background-color $c-twitter
				color $white
			&.facebook
				background-color $c-facebook
			&.youtube
				background-color $c-youtube
				color $white

	circle
		stroke $fg
	text 
		font-family $sans
		font-weight 400
		set-type-size(small)
		text-transform capitalize
		&.total
			fill $gray-dark
	line
		stroke $gray

	.platform
		&--instagram
			fill $c-instagram
		&--twitter
			fill $c-twitter
		&--facebook
			fill $c-facebook
		&--youtube
			fill $c-youtube

	.g-axis
		.tick:nth-child(2)
			display none
		path
			display none
		text 
			set-type-size(xx-small)
			fill $gray-dark
		line
			stroke $gray-light
			stroke-dasharray 4px 4px
			stroke-opacity 0.5

	.label
		text-transform uppercase
		set-type-size(xx-small)
		fill $gray-dark