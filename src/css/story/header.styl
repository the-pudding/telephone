#rightP
	path
		fill #a06b68
#leftP
	path
		fill #cc9592

.logo-wrapper
	position relative
	margin-top -100px
	@media (max-width: 600px)
		margin-top -50px
		a.logo
			max-width 8rem
	a.logo
		display block
		border none
		max-width 9rem
		margin .5rem auto
		margin-top 1rem


		svg
			fill $off-black
			display block
			width 100%
			g
				path
					fill #4a4e80

header
	z-index set-index('overlay')
	position absolute
	top 0
	left 0
	width 100%
	z-index 1000
	//background-color $white
	//background #fbd3d1

	a.logo
		display block
		border none
		max-width 9rem
		margin .5rem auto
		margin-top 1rem

		svg
			fill $off-black
			display block
			width 100%
			g
				path
					fill #4a4e80

header.is-sticky
	position fixed
	transform translate3d(0,0,0)
	background none
	//box-shadow 0 0 7px 1px $gray-light
	height 3rem
	display flex
	width 100%
	align-items center
	.logo-link
		width 25px
		text-decoration none
		border none
		top .5rem
		left .75rem
		position absolute
		&:hover
			p
				opacity 1
				transition opacity .5s
		p
			font-family 'National 2 Narrow Web'
			font-size 14px
			//text-transform uppercase
			font-weight 500
			opacity 0
			margin 0 auto
			width 100px
			transition opacity .5s


	a.logo
		margin 0 auto

	.header__toggle
		position fixed
		transform translate3d(0,0,0)
		top 0
		right 0
		padding 0.75rem
		cursor pointer
		line-height 1
		z-index set-index(overlay)
		border none
		background-color transparent
		svg
			stroke $off-black
			stroke #8e6663

		span
			&:first-of-type
				display block
			&:last-of-type
				display none

		&.is-visible span
			&:first-of-type
				display none
			&:last-of-type
				display block

			svg
				stroke $off-white

	.header__menu
		position fixed
		top 0
		right 0
		transform translateX(100%)
		height 100vh
		width 100%
		max-width 30rem
		padding 1rem 1.5rem
		background-color $off-black
		color $off-white
		z-index set-index(overlay)
		transition transform 200ms ease-in-out
		+mq('bp-3')
			border-left 1px solid $gray-dark

		&.is-visible
			transform translateX(0)

		a
			color $off-white
			border-bottom 1px solid $off-white
			&:hover
				color $gray-light

		.menu__links li
			margin-bottom 0.5rem
			set-type-size(large)
			+mq('bp-3')
				set-type-size(x-large)

		.menu__patreon a
			font-family $sans
			font-weight 700
			color $off-black
			background-color $off-white
			padding 0.25em 0.5em
			border-radius 4px
			border none
			border-bottom none
			font-size 0.8em
			text-transform uppercase
			margin-left 0.5em
			&:hover
				background-color rgba($off-white, 0.75)
				color $off-black

// dark color version
header.is-sticky.is-dark
	background-color $off-black
	box-shadow 0 0 7px 1px $gray-dark

	svg
		path
			fill $off-white

	.header__menu
		background-color $white
		color $off-black
		+mq('bp-3')
			border-left 1px solid $gray-light

	a
		color $off-black
		border-bottom 1px solid $off-black
		&:hover
			color $gray-dark

	.header__toggle
		svg
			stroke $off-white

		&.is-visible span
			svg
				stroke $off-black


	.menu__patreon a
		color $off-white
		background-color $off-black
		&:hover
			background-color rgba($off-black, 0.75)
			color $off-white
